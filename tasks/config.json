{
  "server": {
    "host": "localhost",
    "port": 8080,
    "openBrowser": false,
    "syncBrowsers": false,
    "liveReload": true
  },

  "environments": {
    "dev": "env.json",
    "prod": "env.prod.json"
  },

  "paths": {
    "dist": "dist",
    "src": "src"
  },

  "assets": [
    { "src": "src/assets/**/*", "base": "src" },
    "src/.htaccess",
    "src/favicon.ico",
    "src/robots.txt",
    "src/web.config"
  ],

  "scripts": {
    "vendor": [
      "node_modules/jquery/dist/jquery.js",
      "node_modules/bootstrap-sass/assets/javascripts/bootstrap.js"
    ],
    "local": [
      "src/app/**/*.js"
    ]
  }
}
